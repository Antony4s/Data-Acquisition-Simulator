<Window x:Class="DataAcquisitionSimulatorNew.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataAcquisitionSimulatorNew.Views"
        mc:Ignorable="d"
        Title="Welcome" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to the Data Acquisition Simulator" 
                       FontWeight="Bold" FontSize="16" TextAlignment="Center" />
            <Button Content="Go to Settings"
                    Width="150"
                    Command="{Binding OpenSettingsCommand}" />
            <Button Content="Go to Visualization"
                    Width="150"
                    Command="{Binding OpenVisualizationCommand}" />
        </StackPanel>
    </Grid>
</Window>
