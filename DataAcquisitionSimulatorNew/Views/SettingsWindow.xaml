<Window x:Class="DataAcquisitionSimulatorNew.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataAcquisitionSimulatorNew.Views"
        mc:Ignorable="d"
        Title="Settings" Height="400" Width="600">
    <Grid Background="#2E2E3E">
        <StackPanel Margin="20">
            <TextBlock Text="Sensor Settings" 
                       Foreground="White" FontSize="18" FontWeight="Bold" 
                       Margin="0,0,0,20" />

            <Button Content="Save Settings" Width="150" Margin="0,0,0,10" />
            <Button Content="Load Settings" Width="150" Margin="0,0,0,10" />
            <Button Content="Back" Width="150" Click="Back_Click" />
        </StackPanel>
    </Grid>
</Window>
